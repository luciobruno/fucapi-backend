{
  "functions": [
    {
      "runtime": "nodejs22",
      "source": ".",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ]
  }
}
